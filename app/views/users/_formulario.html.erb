<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger alert-dismissible fade show">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Failed! Este error no permite que se guarden los datos: </strong> <%= msg %>
    </div>
  <%end %>
<% end %>
<div class="container">
  <%= form_for @user do |g| %>
    <div class="form-group">
      <%= g.label :first_name %>
      <%= g.text_field :first_name, type:"text", class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= g.label :last_name %>
      <%= g.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= g.label :email %>
      <%= g.text_area :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= g.label :cellphone %>
      <%= g.text_field :cellphone, class: "form-control" %>
    </div>
    <div class="col text-center">
      <%= g.submit :Submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>